CREATE TABLE IF NOT EXISTS users (
                user_id TEXT PRIMARY KEY,
                msg_count INTEGER DEFAULT 0,
                xp INTEGER 0,
                call_sec INTEGER DEFAULT 0,
                cookies INTEGER DEFAULT 0)

@bot.slash_command(description="Nutze diesen Command damit andere sehen das du AFK bist.")
async def afk(ctx, grund: Option(str, description="Schreibe hier einen Grund...", default=None), message):
    print(f"{ctx.author} hat /afk gemacht")
    guild: discord.Guild = bot.get_guild(1016436920965939280)
    rolle: discord.Role = guild.get_role(1037701738695761940)
    if grund == None:
        grund = "Du hast keinen Grund angegeben"
    await ctx.respond(f"Du wurdest jetzt als AFK makiert für den grund: **{grund}**.", ephemeral=True)
    await ctx.author.add_roles(rolle)
    if grund == "Du hast keinen Grund angegeben":
        grund = f"{ctx.author.name} hat keinen Grund angegeben"
    mention = ctx.author.mention
    print(mention)

    @bot.event()
    async def on_message(msg):
        print(msg.mention)
        if msg.mention == ctx.author.mention:
            await ctx.author.remove_role(rolle)
            await ctx.respond(f"Du wirst jetzt nichtmehr als AFK makiert. (Du wurdest für den Grund **{grund}** als AFK"
                              f" makiert**")

